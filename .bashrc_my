green=$( tput setaf 2 )
white=$( tput setaf 7 )
reset=$( tput sgr0 )
PS1="\[$green\]\h\[$white\]:\w$\[$reset\] "

export LC_CTYPE="C.UTF-8"

export PATH="${PATH}:/usr/local/sbin:/sbin:/usr/sbin"
export PATH=".composer/vendor/bin:$HOME/.composer/vendor/bin:$HOME/.npm-packages/bin:$PATH"

export EDITOR="vim"

# Color output
export CLICOLOR=1
export LSCOLORS=GxFxCxDxBxegedabagaced

# History
export HISTFILESIZE=
export HISTSIZE=

# Locale
export PYTHONIOENCODING=UTF-8
export LANG=C.UTF-8
export LC_CTYPE=C.UTF-8

#eval `gnome-keyring-daemon --start`

# Disable ctrl-s
stty -ixon
